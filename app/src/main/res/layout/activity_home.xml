<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="cn.com.mbmpv.trainingonline.ui.HomeActivity">

    <!--<android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"/>-->

    <FrameLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
    
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E9E9"/>    
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="2dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/home_img"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:src="@mipmap/home_img_pressed"/>

        <ImageView
            android:id="@+id/kecheng_img"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:src="@mipmap/kecheng_img_normal"/>

        <ImageView
            android:id="@+id/myself_img"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:src="@mipmap/myself_img_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="首页"
            android:gravity="center_horizontal"
            android:textColor="#4E4E4E"
            android:textSize="14sp"
            android:src="@mipmap/home_img_pressed"/>

        <TextView
            android:id="@+id/kecheng_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="课程"
            android:gravity="center_horizontal"
            android:textColor="#B1B1B1"
            android:textSize="14sp"
            android:src="@mipmap/kecheng_img_normal"/>

        <TextView
            android:id="@+id/myself_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的"
            android:gravity="center_horizontal"
            android:textColor="#B1B1B1"
            android:textSize="14sp"
            android:src="@mipmap/myself_img_normal"/>
    </LinearLayout>
    
</LinearLayout>
