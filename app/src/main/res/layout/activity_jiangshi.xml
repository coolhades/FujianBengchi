<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="cn.com.mbmpv.trainingonline.ui.JiangshiActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#16202A">
        
        
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="@mipmap/white_back_img"/>
        
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/white_tip_img"/>
        
        <ImageView
            android:id="@+id/head_img"
            android:layout_width="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon"
            android:layout_height="100dp"/>
        
        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/head_img"
            android:layout_centerHorizontal="true"
            android:text="装逼大神"/>
        
    </RelativeLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/kedan_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center"
            android:textColor="#333333"
            android:text="13个课单"/>
        <TextView
            android:id="@+id/jianjie_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center"
            android:textColor="#C4C4C4"
            android:text="教师简介"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/kedan_img"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:src="@mipmap/heixian_img"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/jianjie_img"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>
    
  
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
