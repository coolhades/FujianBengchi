<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1F0"
    android:orientation="vertical"
    tools:context="cn.com.mbmpv.trainingonline.ui.PersonalSetActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/back_img"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="#333333"
            />
        
        
        <TextView
            android:id="@+id/bianji"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:paddingRight="10dp"
            android:visibility="invisible"
            android:textSize="16sp"
            android:text="完成"/>
        
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFF1F0"/>
    
    
    <LinearLayout
        android:id="@+id/head_ing_bar"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="#333333"/>
        
        <ImageView
            android:id="@+id/head_img"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"
            android:src="@mipmap/icon"/>
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_img"/>
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFF1F0"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="张建国"
            android:gravity="right"
            android:background="@drawable/input_bg"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="#333333"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_img"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#EFF1F0"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="133748845945"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="#333333"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_img"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#EFF1F0"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/sex_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="男"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="#333333"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_img"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#EFF1F0"/>


    <LinearLayout
        android:id="@+id/workinfo"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作信息"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="#333333"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="#333333"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_img"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#EFF1F0"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:visibility="invisible"
        android:paddingBottom="10dp"
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/age_bt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1990-01-23  90后"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="#333333"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_img"/>

    </LinearLayout>
    
    
    <View
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    
    <LinearLayout
        android:id="@+id/sex_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
  
    
    <TextView
        android:id="@+id/nan_bt"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:text="男"
        android:gravity="center_horizontal"
        android:textColor="#333333"
        android:textSize="15sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#EFF1F0"/>

    <TextView
        android:id="@+id/nv_bt"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:text="女"
        android:gravity="center_horizontal"
        android:textColor="#333333"
        android:textSize="15sp"/>

    </LinearLayout>
    
</LinearLayout>
