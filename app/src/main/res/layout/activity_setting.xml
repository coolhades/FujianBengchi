<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="cn.com.mbmpv.trainingonline.ui.SettingActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/back_img"/>
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设置"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#484848"/>
        
        <View
            android:layout_width="35dp"
            android:layout_height="1dp"/>
        
        
    </LinearLayout>
    
    
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFF0F1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/ziliao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#484848"
            android:textSize="15sp"
            android:text="个人资料"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/right_img"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFF0F1"/>
    
    
    <LinearLayout
        android:id="@+id/cache_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#484848"
            android:textSize="15sp"
            android:text="清除缓存"/>
        
        <TextView
            android:id="@+id/cache_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="187MB"
            android:textColor="#484848"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFF0F1"/>
    

    <LinearLayout
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#484848"
            android:textSize="15sp"
            android:text="更改密码"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/right_img"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFF0F1"/>


   

    
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFF0F1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#484848"
            android:textSize="15sp"
            android:text="版本信息"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V 2.0"
            android:textColor="#484848"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFF0F1"/>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/about_us_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#484848"
            android:textSize="15sp"
            android:text="关于我们"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/right_img"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EFF0F1"/>
    
    <TextView
        android:id="@+id/logout_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF485D"
        android:textSize="15sp"
        android:padding="20dp"
        android:gravity="center"
        android:text="退出当前帐号"/>
    

</LinearLayout>
