<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#E6E6E6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/back_img"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="新手引导"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:textColor="#484848"/>
        <ImageView
            android:id="@+id/guide_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/guide_icon"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E6E6E6"/>
    <LinearLayout
        android:id="@+id/vedio_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="视频分享新手引导"
            android:paddingLeft="15dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#343434"/>


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/right_img"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E6E6E6"/>
    <LinearLayout
        android:id="@+id/question_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提问功能新手引导"
            android:paddingLeft="15dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#343434"/>


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/right_img"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E6E6E6"/>
    <LinearLayout
        android:id="@+id/study_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="学习档案分享新手引导"
            android:paddingLeft="15dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#343434"/>


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/right_img"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E6E6E6"/>
    <LinearLayout
        android:id="@+id/exam_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="考试成绩分享新手引导"
            android:paddingLeft="15dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#343434"/>


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/right_img"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E6E6E6"/>
    <LinearLayout
        android:id="@+id/coin_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="积分排名新手引导"
            android:paddingLeft="15dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#343434"/>


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/right_img"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E6E6E6"/>
    <LinearLayout
        android:id="@+id/coinchange_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="积分兑换成功新手引导"
            android:paddingLeft="15dp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#343434"/>


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/right_img"/>

    </LinearLayout>

</LinearLayout>