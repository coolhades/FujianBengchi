<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/homefragment_viewpager"
        android:layout_height="200dp"
        android:background="#556675"
        android:layout_width="match_parent"
        />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indictor"
        android:layout_marginTop="150dp"
        android:background="#33445566"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <LinearLayout
        android:id="@+id/announce_ly"
        android:layout_below="@+id/homefragment_viewpager"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/announce_btn"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />


        <cn.com.mbmpv.trainingonline.widget.VerticalTextview
            android:id="@+id/textbanner"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </cn.com.mbmpv.trainingonline.widget.VerticalTextview>

    </LinearLayout>

    <View
        android:layout_below="@+id/announce_ly"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"/>



    <LinearLayout
        android:id="@+id/img1"
        android:layout_marginTop="40dp"
        android:layout_below="@id/homefragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/guanli_img"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@mipmap/guanli_img"
            />
        <ImageView
            android:id="@+id/zhujichang_bt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@mipmap/zhujichang_img"
            />
        <ImageView
            android:id="@+id/weixiu_img"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@mipmap/weixiu_img"
            />
        <ImageView
            android:id="@+id/jinrong_img"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@mipmap/jinrong_img"
            />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_below="@+id/img1"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/guanli_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#383838"
            android:text="4S店管理"/>
        <TextView
            android:id="@+id/zhujichang_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#383838"
            android:layout_weight="1"
            android:text="汽车主机厂"/>
        <TextView
            android:id="@+id/weixiu_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#383838"
            android:layout_weight="1"
            android:text="汽车维修"/>
        <TextView
            android:id="@+id/jinrong_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#383838"
            android:layout_weight="1"
            android:text="汽车金融"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/img2"
        android:layout_below="@id/text1"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/banjin_img"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@mipmap/banjin_img"
            />
        <ImageView
            android:id="@+id/meirong_img"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@mipmap/meirong_img"
            />
        <ImageView
            android:id="@+id/pinggu_img"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@mipmap/pinggu_img"
            />
        <ImageView
            android:id="@+id/gengduo_img"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@mipmap/geduo_img"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_below="@+id/img2"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/banjin_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#383838"
            android:text="汽车钣金"/>
        <TextView
            android:id="@+id/meirong_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#383838"
            android:layout_weight="1"
            android:text="汽车美容"/>
        <TextView
            android:id="@+id/pinggu_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#383838"
            android:layout_weight="1"
            android:text="二手车评估"/>
        <TextView
            android:id="@+id/gengduo_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#383838"
            android:layout_weight="1"
            android:text="更多课程"/>
    </LinearLayout>
    

</RelativeLayout>