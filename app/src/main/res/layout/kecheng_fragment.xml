<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#FFFFFF"
              android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:orientation="horizontal"
       >
       
       <View
           android:layout_width="45dp"
           android:layout_height="1dp"/>
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:textSize="16sp"
          android:gravity="center"
          android:textColor="#333333"
          android:text="课程"/> 
       
       <ImageView
           android:id="@+id/search_bt"
           android:layout_width="35dp"
           android:layout_height="35dp"
           android:visibility="invisible"
           android:layout_gravity="center_vertical"
           android:layout_marginRight="10dp"
           android:src="@mipmap/search_img"/>
       
   </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E9E9E9"/>

   

    <LinearLayout
        android:id="@+id/kecheng_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/kecheng_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="课程"
            android:gravity="center_horizontal"
            android:textColor="#4E4E4E"
            android:textSize="14sp"
            android:src="@mipmap/home_img_pressed"/>

        <TextView
            android:id="@+id/mingshi_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="名师"
            android:gravity="center_horizontal"
            android:textColor="#B1B1B1"
            android:textSize="14sp"
            android:src="@mipmap/kecheng_img_normal"/>

        <TextView
            android:id="@+id/zhuanqu_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="专区"
            android:gravity="center_horizontal"
            android:textColor="#B1B1B1"
            android:textSize="14sp"
            android:src="@mipmap/myself_img_normal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kecheng_img_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/kecheng_img"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:src="@mipmap/heixian_img"/>

        <ImageView
            android:id="@+id/mingshi_img"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:src="@mipmap/touming_img"/>

        <ImageView
            android:id="@+id/zhuanqu_img"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:src="@mipmap/touming_img"/>
    </LinearLayout>
    
    <View
        android:id="@+id/xian_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E6E6E6"/>
    
    
    
    <android.support.v4.view.ViewPager
        android:id="@+id/kecheng_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

