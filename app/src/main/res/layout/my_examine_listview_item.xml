<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:context="cn.com.mbmpv.trainingonline.ui.SettingActivity">


    <TextView
        android:id="@+id/renwu"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:textSize="12sp"
        android:background="@drawable/kuang_bg"
        android:textColor="#4E4E4E"
        android:text="去考试"
        android:layout_toRightOf="@+id/item_content"
        android:layout_alignTop="@+id/item_content"
        android:layout_toStartOf="@+id/check"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:textSize="12sp"
        android:background="@drawable/kuang_bg"
        android:textColor="#4E4E4E"
        android:visibility="visible"
        android:text="查看"
        android:layout_marginRight="6dp"
        android:layout_alignTop="@+id/renwu"
        android:layout_alignEnd="@+id/item_title" />
    
    <ImageView
        android:id="@+id/item_img"
        android:layout_width="110dp"
        android:layout_height="85dp"
        android:adjustViewBounds="true"/>
    
    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:textColor="#4E4E4E"
        android:paddingRight="6dp"
        android:singleLine="true"
        android:text="福建奔驰体验课程"
        android:layout_alignTop="@+id/item_img"
        android:layout_alignStart="@+id/item_tip" />
    
    
    <ImageView
        android:id="@+id/item_tip"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/time"
        android:layout_below="@id/item_title"
        android:layout_toRightOf="@id/item_img"/>



    <TextView
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#AFAFAF"
        android:paddingLeft="10dp"
        android:text="已考试  98分"
        android:layout_alignTop="@+id/item_tip"
        android:layout_toEndOf="@+id/item_tip" />
    
    

</RelativeLayout>