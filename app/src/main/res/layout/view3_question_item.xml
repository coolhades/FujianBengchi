<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#FFFFFF"
              android:layout_height="match_parent">
    

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <cn.com.mbmpv.trainingonline.widget.CircularImage
            android:id="@+id/head_img"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        
        <TextView
            android:id="@+id/user_nick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="张三啊哈哈哈"
            android:textColor="#3A3A3A"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:text="2016-07-09"
            android:textColor="#AEAEAE"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_height="50dp"/>
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="70dp"
        android:paddingRight="10dp"
        android:text="额图文发士大夫士大夫大师傅士大夫士大夫啊实打实大苏打啊实打实大苏打啊实打实的"
        android:textColor="#3A3A3A"
        android:textSize="14sp"/>
    
    
    <LinearLayout
        android:id="@+id/chakan_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/chakan_text"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="#AEAEAE"
            android:paddingLeft="70dp"
            android:text="问题回复"/>
        <ImageView
            android:id="@+id/chakan_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12.5dp"
            android:src="@mipmap/open_img"/>
        
    </LinearLayout>
    

    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/zan_bt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/weizan_img"/>

        <TextView
            android:id="@+id/num_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CDCDCD"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:text="10"/>

        <ImageView
            android:id="@+id/cai_bt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/weicai_img"/>

        <TextView
            android:id="@+id/num_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CDCDCD"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:visibility="gone"
            android:text="0"/>


       
        
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E6E6E6"/>
</LinearLayout>